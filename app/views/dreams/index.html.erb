<div class="background-container">

<div class="hero">
<h1>The Dream Repertoire</h1>
</div>
<br>

<div class="container">
  <div class="dreams-list">
    <% @dreams.each do |dream| %>

        <div class="dream" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)),
         url('<%= cl_image_path dream.photo, crop: :fill %>')">
          <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
            <h3><%= link_to(dream.name, dream_path(dream)) %></h3>
            <p><%= dream.description.split.first(10).join(' ') %>...</p>
          <!-- <div class="card-footer">
          </div> -->
        </div>

    <% end %>
</div>
</div>
</div>
