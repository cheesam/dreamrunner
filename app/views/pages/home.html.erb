<h1>Dreamrunner</h1>

<div class="container">
  <div class="row">
    <% @dreams.each do |dream| %>
          <div class="col-sm">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= link_to(dream.name, dream_path(dream)) %></h5>
                <p class="card-text"><%= dream.description %></p>
              </div>
            </div>
          </div>
        <% end %>
  </div>
</div>
