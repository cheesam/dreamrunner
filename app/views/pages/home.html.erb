<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1534447677768-be436bb09401?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2742&q=80);">
  <div class="container">
    <h1>Dreamrunner brings <strong>state of the art dreams</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and have a dream!</p>
    <%= link_to "Book now", dreams_path, class: "btn btn-flat" %>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @dreams.each do |dream| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= link_to dream.name, dream_path(dream) %>
      </div>
    <% end %>
  </div>
</div>

