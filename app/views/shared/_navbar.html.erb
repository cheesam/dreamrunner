<div class="navbar navbar-expand-sm navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
   <h3 class="logo-font">Dreamrunner</h3>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class=<%= current_class?(root_path) %>>
          <%= link_to "Home", root_path, class: "link-colour nav-link" %>
        </li>
        <li class=<%= current_class?(dreams_path) %>>
          <%= link_to "Search your dream", dreams_path, class: "link-colour nav-link" %>
        </li>
        <li class=<%= current_class?(new_dream_path) %>>
          <%= link_to "Host a dream", new_dream_path, class: "nav-link link-colour" %>
        </li>
        <li class="nav-item">
          <%= link_to "Upcoming dreams", user_path(current_user), class: "nav-link link-colour" %>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo, width: 40, height: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link link-colour" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
