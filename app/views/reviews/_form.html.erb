<%= simple_form_for [@dream, @review] do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :accuracy %>
    <%= f.number_field :accuracy, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :design %>
    <%= f.number_field :design, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :value %>
    <%= f.number_field :value, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
